<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义日历控件 -->
    <declare-styleable name="CalendarCard">

        <!-- 表格线 -->
        <attr name="colorTableLine" format="color" />
        <!-- 分割线 -->
        <attr name="colorDivider" format="color" />
        <!-- 阴影线 -->
        <attr name="colorShadowLine" format="color" />
        <!-- 星期颜色 -->
        <attr name="colorWeek" format="color" />
        <!-- 本月的常规日期颜色 -->
        <attr name="colorNormal" format="color" />
        <!-- 今天所对应的日期颜色 -->
        <attr name="colorToday" format="color" />
        <!-- 其他月份的日期颜色 -->
        <attr name="colorOtherMonth" format="color" />
        <!-- 选中的日期背景色 -->
        <attr name="colorSelectedBg" format="color|reference" />
        <!-- 选中的日期颜色 -->
        <attr name="colorSelectedText" format="color" />
        <!--
        是否绘制表格线(enableDrawOtherMonth=false一定不绘制表格线),默认为false
        (true:如果日期单元格的水平间距和垂直间距均为0,则绘制网格线,否则绘制单元格;
        false:绘制星期与日期间的分割线和日历底边界的阴影线,选中日期的背景为圆形)

        -->
        <attr name="enableDrawTableLine" format="boolean" />
        <!-- 是否绘制其他月份的日期(为false时,enableDrawTableLine=false),默认为false -->
        <attr name="enableDrawOtherMonth" format="boolean" />
        <!-- 点击其他月份的日期后是否翻页(为true时,enableDrawOtherMonth=true),默认为false -->
        <attr name="enableChangePage" format="boolean" />
        <!-- 未来的日期是否可点击(不可点击时,显示的颜色与本月的常规日期颜色不同),默认为false -->
        <attr name="enableClickFutureDay" format="boolean" />
        <!-- 单元格水平间距,默认为0 -->
        <attr name="horizontalCellSpace" format="dimension|reference" />
        <!-- 单元格垂直间距,默认为0 -->
        <attr name="verticalCellSpace" format="dimension|reference" />
    </declare-styleable>
    
     <!-- 自定义组合头像控件 -->
    <declare-styleable name="GroupImageView">
        <!-- 背景颜色 -->
        <attr name="colorBG" format="color|reference" />
        <!-- 背景圆角 -->
        <attr name="bgRoundRectRadius" format="dimension|reference" />
        <!-- 水平间距 -->
        <attr name="horizontalSpace" format="dimension|reference" />
        <!-- 垂直间距 -->
        <attr name="verticalSpace" format="dimension|reference" />
    </declare-styleable>

 	<!-- 可设置上下左右图片尺寸的TextView -->
    <declare-styleable name="DrawableTextView">
        <!-- 上下左右图片尺寸统一  -->
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <!-- 上 -->
        <attr name="drawableTopWidth" format="dimension" />
        <attr name="drawableTopHeight" format="dimension" />
        <!-- 下 -->
        <attr name="drawableBottomWidth" format="dimension" />
        <attr name="drawableBottomHeight" format="dimension" />
        <!-- 左 -->
        <attr name="drawableLeftWidth" format="dimension" />
        <attr name="drawableLeftHeight" format="dimension" />
        <!-- 右 -->
        <attr name="drawableRightWidth" format="dimension" />
        <attr name="drawableRightHeight" format="dimension" />
    </declare-styleable>

    <!-- 输入身份证后6位的编辑框 -->
    <declare-styleable name="InputIDCardEditText">
        <attr name="isShowText" format="boolean" />
        <attr name="textCount" format="integer" />
        <attr name="strokeWidth" format="reference|dimension"/>
        <attr name="strokeRadius" format="reference|dimension" />
        <attr name="circleRadius" format="reference|dimension" />
    </declare-styleable>
</resources>